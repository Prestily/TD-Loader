<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Fonts -->
    <FontFamily x:Key="nkfont" >pack://application:,,,/Resources/Fonts/#Oetztype</FontFamily>

    <!-- This needs to be programatic to allow multiple themes at runtime -->
