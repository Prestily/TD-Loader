                    <Canvas Height="150" Width="1260" HorizontalAlignment="Left" Margin="100,0,0,0">
                        <Image Grid.Row="1" Source="Resources/BTD6 loaded.png" Canvas.Left="0" MaxHeight="150" Margin="10,0"/>
                        <Image Grid.Row="1" Source="Resources/BTD5 loaded.png" Canvas.Left="420" MaxHeight="150" Margin="10,0"/>
                        <Image Grid.Row="1" Source="Resources/BTDB loaded.png" Canvas.Left="840" MaxHeight="150" Margin="10,0"/>
                        <Image Grid.Row="1" Source="Resources/BMC loaded.png" Canvas.Left="1260" MaxHeight="150" Margin="10,0"/>
                    </Canvas>
                </ScrollViewer>-->
            </Grid>
        </Grid>

        <ToolBarPanel DockPanel.Dock="Top">
            <ToolBar ToolBarTray.IsLocked="True" Background="#FF191919" Loaded="ToolBar_Loaded">
                <xctk:DropDownButton x:Name="File_Button" Background="#FF191919" Content="File" Foreground="White" FontSize="18" DropDownContentBackground="Black">
                    <xctk:DropDownButton.DropDownContent>
                        <Menu>
                            <Menu.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </Menu.ItemsPanel>

                            <MenuItem x:Name="Settings_Button" Header="Settings" FontSize="16" Foreground="White" Background="#FF191919" BorderThickness="0" Click="Settings_Button_Click"/>
                            <MenuItem x:Name="OpenSettingsDir_Button" Header="Open Settings Dir" FontSize="16"  Foreground="White" Background="#FF191919" BorderThickness="0" Click="OpenSettingsDir_Button_Click"/>
                        </Menu>
                    </xctk:DropDownButton.DropDownContent>
                </xctk:DropDownButton>

                <xctk:DropDownButton x:Name="Open_Button" Background="#FF191919" Content="Open" Foreground="White" FontSize="18" DropDownContentBackground="Black">
                    <xctk:DropDownButton.DropDownContent>
                        <Menu>
                            <Menu.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </Menu.ItemsPanel>

                            <MenuItem x:Name="OpenBTD6_ModDir_Button" Header="BTD6 Mods Directory" FontSize="16" Foreground="White" Background="#FF191919" BorderThickness="0" Click="OpenBTD6_ModDir_Button_Click"/>
                            <MenuItem x:Name="OpenBTD5_ModDir_Button" Header="BTD5 Mods Directory" FontSize="16" Foreground="White" Background="#FF191919" BorderThickness="0" Click="OpenBTD5_ModDir_Button_Click"/>
                            <MenuItem x:Name="OpenBTDB_ModDir_Button" Header="BTDB Mods Directory" FontSize="16" Foreground="White" Background="#FF191919" BorderThickness="0" Click="OpenBTDB_ModDir_Button_Click"/>
                            <MenuItem x:Name="OpenBMC_ModDir_Button" Header="BMC Mods Directory" FontSize="16" Foreground="White" Background="#FF191919" BorderThickness="0" Click="OpenBMC_ModDir_Button_Click"/>
                        </Menu>
                    </xctk:DropDownButton.DropDownContent>
                </xctk:DropDownButton>

                <xctk:DropDownButton x:Name="Testing_Button" Background="#FF191919" Content="Testing" Foreground="White" FontSize="18" DropDownContentBackground="Black">
                    <xctk:DropDownButton.DropDownContent>
                        <Menu>
                            <Menu.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </Menu.ItemsPanel>

                            <MenuItem x:Name="Test_Button1" Header="Test Button 1" FontSize="16" Foreground="White" Background="#FF191919" BorderThickness="0" Click="Test_Button1_Click"/>
                        </Menu>
                    </xctk:DropDownButton.DropDownContent>
                </xctk:DropDownButton>
                
                <Separator Margin="8,0,8,0"/>
                <Button x:Name="Discord_Button" Background="#FF69B2FB" Width="100" Height="30" BorderBrush="Black" FontSize="16" Click="Discord_Button_Click" VerticalAlignment="Bottom">
                    <DockPanel>
                        <TextBlock Text=" Discord " Foreground="White"/>
                        <Image Source="discord logo.png" Margin="2"/>
                    </DockPanel>
                </Button>
                
                <Separator Margin="8,0,8,0"/>
                <Button x:Name="Launch_Button" Content="Launch" Background="#FF5BC900" Width="100" Height="30" BorderBrush="Black" FontSize="16" Click="Launch_Button_Click" Foreground="White"/>
            </ToolBar>
        </ToolBarPanel>

        <TabControl x:Name="Main_TabController" TabStripPlacement="Left" VerticalAlignment="Stretch" 
                    HorizontalAlignment="Stretch" Grid.Row="1" Background="Black" BorderBrush="Black"
                     Style="{DynamicResource TabControlStyle1}" Margin="0">
            <TabItem Header="Home">
                <WebBrowser x:Name="News_WebBrowser"/>
            </TabItem>

