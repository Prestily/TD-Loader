                                        <Image x:Name="BTD5_Image" Canvas.Top="250" Source="{Binding Path=Btd5ImgBinding, Mode=TwoWay}" Margin="10,0" MouseDown="BTD5_Image_MouseDown" IsMouseDirectlyOverChanged="BTD5_Image_IsMouseDirectlyOverChanged"/>
                                        <Image x:Name="BTDB_Image" Canvas.Top="450" MaxHeight="150" Source="{Binding Path=BtdbImgBinding, Mode=TwoWay}" Margin="10,0" MouseDown="BTDB_Image_MouseDown" IsMouseDirectlyOverChanged="BTDB_Image_IsMouseDirectlyOverChanged"/>
                                        <Image x:Name="BMC_Image" Canvas.Top="650" MaxHeight="150" Source="{Binding Path=BmcImgBinding, Mode=TwoWay}" Margin="10,0" MouseDown="BMC_Image_MouseDown" IsMouseDirectlyOverChanged="BMC_Image_IsMouseDirectlyOverChanged"/>
