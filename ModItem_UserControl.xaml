<UserControl x:Class="TD_Loader.ModItem_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TD_Loader"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid MaxHeight="27" Width="auto" Background="#FF363636">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="Enable_Button" Grid.Column="1" Background="#FFDE2525" Click="Enable_Button_Click">
            <Viewbox  MinWidth="120" MinHeight="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0">
                <TextBlock x:Name="EnableButton_Text" Foreground="White">Disabled</TextBlock>
            </Viewbox>
        </Button>

        <Canvas Background="#FF424242" Grid.Column="3">
            
        </Canvas>
        <Viewbox Grid.Column="3"  MinWidth="120" MinHeight="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0">
            <TextBlock x:Name="ModName" Foreground="White" Margin="20,0"></TextBlock>
        </Viewbox>
        
        <xctk:SplitButton Grid.Column="5" FontSize="17" Content="  More  " Background="#FF00B7E0" Foreground="White">
            <xctk:SplitButton.DropDownContent>
                <xctk:ButtonChrome></xctk:ButtonChrome>
            </xctk:SplitButton.DropDownContent>
        </xctk:SplitButton>
        
        
    </Grid>
</UserControl>
